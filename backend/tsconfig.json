{
  "compilerOptions": {
    "target": "ES2022",                                 
    "lib": ["ES2022"],                                       
    "module": "commonjs",   
    "outDir": "./dist",                                  
    "noEmit": true,           
    "esModuleInterop": true,
    "resolveJsonModule": true,                       
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,     
    "strict": true                       
  },
  "exclude": ["node_modules"]
}
